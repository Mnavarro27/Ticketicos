@page
@model WebApplication1.Pages.Cliente.ResetPasswordModel

@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: black;
            color: white;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .logo-box {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .logo {
            width: 70px;
            height: 70px;
            background-color: #C1FF00;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 10px;
            font-weight: bold;
            color: black;
        }

        .reset-panel {
            background-color: #333333;
            border-radius: 15px;
            overflow: hidden;
            max-width: 500px;
            margin: 0 auto;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
        }

        .title {
            background-color: #C1FF00;
            color: black;
            text-align: center;
            padding: 10px;
            margin: 0;
            font-size: 20px;
            font-weight: bold;
        }

        .subtitle {
            text-align: center;
            margin: 20px 0;
            color: #ddd;
        }

        .form-group {
            margin-bottom: 20px;
            padding: 0 20px;
            position: relative;
        }

        .text-white {
            color: white;
            display: block;
            margin-bottom: 8px;
        }

        .input-field {
            width: 100%;
            padding: 12px;
            background-color: #222;
            border: 1px solid #444;
            border-radius: 5px;
            color: white;
            box-sizing: border-box;
        }

            .input-field:focus {
                outline: none;
                border-color: #C1FF00;
                box-shadow: 0 0 0 2px rgba(193, 255, 0, 0.25);
            }

        .eye-icon {
            position: absolute;
            right: 30px;
            top: 38px;
            cursor: pointer;
            color: #aaa;
        }

        .btn-change-password {
            width: 100%;
            padding: 12px;
            background-color: #C1FF00;
            color: black;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-change-password:hover {
                background-color: #a8e600;
            }

        .btn-back {
            display: block;
            text-align: center;
            color: white;
            text-decoration: none;
            padding: 10px;
            border: 1px solid #555;
            border-radius: 5px;
            transition: all 0.3s;
        }

            .btn-back:hover {
                background-color: #C1FF00;
                color: black;
                border-color: #C1FF00;
            }

        .error-message {
            background-color: rgba(255, 0, 0, 0.2);
            border: 1px solid #ff6666;
            color: #ff6666;
            padding: 10px;
            margin: 20px;
            border-radius: 5px;
        }

        .success-message {
            background-color: rgba(0, 255, 0, 0.1);
            border: 1px solid #66ff66;
            color: #66ff66;
            padding: 10px;
            margin: 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo-box">
            <div class="logo">TICKICOS</div>
        </div>

        <div class="reset-panel">
            <h1 class="title">Restablecer Contraseña</h1>
            <p class="subtitle">Ingresa tu nueva contraseña</p>

            <form method="post">
                <div class="form-group">
                    <label for="NewPassword" class="text-white">Nueva contraseña</label>
                    <input type="password" id="NewPassword" name="NewPassword" class="input-field" required>
                    <span class="eye-icon" onclick="togglePassword('NewPassword')">👁️</span>
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword" class="text-white">Confirmar Nueva Contraseña</label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="input-field" required>
                    <span class="eye-icon" onclick="togglePassword('ConfirmPassword')">👁️</span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn-change-password">Cambiar Contraseña</button>
                </div>

                <div class="form-group">
                    <a href="/Cliente/login" class="btn-back">Volver al inicio de sesión</a>
                </div>
            </form>

            @if (Model.ErrorMessage != null)
            {
                <div class="error-message">
                    @Model.ErrorMessage
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="success-message">
                    @TempData["SuccessMessage"]
                </div>
            }
        </div>
    </div>

    <script>
        function togglePassword(inputId) {
            var input = document.getElementById(inputId);
            var type = input.type === "password" ? "text" : "password";
            input.type = type;
        }
    </script>
</body>
</html>

