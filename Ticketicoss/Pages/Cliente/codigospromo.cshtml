@page
@model WebApplication1.Pages.Cliente.CodigosPromoModel
@{
    ViewData["Title"] = "Tickicos - Códigos Promocionales";
}

<style>
    :root {
        --color-neon: rgb(193, 255, 0);
        --color-fondo: black;
        --color-panel: rgb(80, 80, 80);
        --color-tarjeta: rgb(70, 70, 70);
    }

    body {
        background-color: var(--color-fondo);
        font-family: 'Segoe UI', sans-serif;
    }

    .logo-container {
        display: flex;
        justify-content: center;
        margin: 20px 0;
    }

    .logo {
        width: 70px;
        height: 70px;
        background-color: var(--color-neon);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .logo-text {
        font-weight: bold;
        color: black;
    }

    .main-panel {
        width: 1100px;
        height: 600px;
        margin: 30px auto;
        background-color: var(--color-panel);
        border-radius: 20px;
        position: relative;
    }

    .title {
        width: 100%;
        height: 40px;
        background-color: var(--color-neon);
        color: black;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        line-height: 40px;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
    }

    .promo-panel {
        width: 1040px;
        height: 520px;
        margin: 0 auto;
        padding: 10px;
        overflow-y: auto;
        display: flex;
        flex-wrap: wrap;
    }

    .promo-card {
        width: 320px;
        height: 150px;
        background-color: var(--color-tarjeta);
        margin: 10px;
        padding: 10px;
        position: relative;
    }

    .descuento {
        color: white;
        font-size: 18px;
        font-weight: bold;
        margin-top: 10px;
        margin-left: 10px;
    }

    .validez {
        color: lightgray;
        font-size: 14px;
        margin-top: 10px;
        margin-left: 10px;
    }

    .precio {
        color: var(--color-neon);
        font-size: 18px;
        font-weight: bold;
        margin-top: 10px;
        margin-left: 10px;
    }

    .comprar-btn {
        width: 280px;
        height: 35px;
        background-color: rgb(0, 180, 0);
        color: white;
        border: none;
        cursor: pointer;
        font-size: 14px;
        position: absolute;
        bottom: 15px;
        left: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
    }

        .comprar-btn:hover {
            background-color: rgb(0, 150, 0);
        }

    .preventa-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: var(--color-neon);
        color: black;
        padding: 3px 8px;
        font-size: 12px;
        font-weight: bold;
        border-radius: 10px;
    }
</style>

<div class="logo-container">
    <div class="logo">
        <span class="logo-text">TICKICOS</span>
    </div>
</div>

<div class="main-panel">
    <div class="title">Códigos Promocionales</div>
    <div class="promo-panel">
        @if (Model.Promociones != null && Model.Promociones.Any())
        {
            foreach (var promo in Model.Promociones)
            {
                <div class="promo-card">
                    @if (promo.EsPreventa)
                    {
                        <div class="preventa-badge">PREVENTA</div>
                    }
                    <div class="descuento">@promo.Descuento</div>
                    <div class="validez">@promo.Validez</div>
                    <div class="precio">@promo.Precio</div>
                    <a href="/Cliente/pagocodigos?codigoId=@promo.Id" class="comprar-btn">
                        Comprar Código
                    </a>
                </div>
            }
        }
        else
        {
            <p style="color: white; text-align: center; width: 100%;">No hay códigos promocionales disponibles.</p>
        }
    </div>
</div>

